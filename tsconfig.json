{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "es6",
      "dom",
      "WebWorker"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "@types/node",
      "@types/webpack-env"
    ],
    "allowSyntheticDefaultImports": true
  },
}