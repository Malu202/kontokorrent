{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": [
      "es6",
      "dom",
      "WebWorker",
      "DOM.Iterable"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "module": "es2020",
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "types": [
      "@types/node",
      "@types/webpack-env"
    ],
    "allowSyntheticDefaultImports": true
  },
}